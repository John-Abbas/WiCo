<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="bitloggers.wico.Controls">


    <TextView
        android:text="Channel 1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:layout_above="@+id/app2_sw"
        android:layout_alignEnd="@+id/app1_sw" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/switch_off"
        android:onClick="controlRelays"
        android:background="@color/backGround_Purple"
        app:backgroundTint="@color/backGround_Purple"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/app3_sw"
        android:layout_marginTop="51dp"
        android:id="@+id/app1_sw" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/switch_off"
        android:id="@+id/app3_sw"
        android:onClick="controlRelays"
        android:background="@color/backGround_Purple"
        app:backgroundTint="@color/backGround_Purple"
        android:layout_marginStart="61dp"
        android:layout_alignTop="@+id/app4_sw"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/switch_off"
        android:id="@+id/app4_sw"
        android:onClick="controlRelays"
        android:background="@color/backGround_Purple"
        app:backgroundTint="@color/backGround_Purple"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="63dp" />

    <TextView
        android:text="Channel 2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_above="@+id/app2_sw"
        android:layout_alignEnd="@+id/app2_sw" />

    <TextView
        android:text="Channel 3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:layout_above="@+id/app3_sw"
        android:layout_alignEnd="@+id/app3_sw" />

    <TextView
        android:text="Channel 4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:layout_above="@+id/app4_sw"
        android:layout_alignEnd="@+id/app4_sw" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/switch_off"
        android:id="@+id/app2_sw"
        android:onClick="controlRelays"
        android:background="@color/backGround_Purple"
        app:backgroundTint="@color/backGround_Purple"
        android:layout_alignTop="@+id/app1_sw"
        android:layout_alignEnd="@+id/textView7" />
</RelativeLayout>
