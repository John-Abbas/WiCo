<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="bitloggers.wico.Search">


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/wifi_icon"
        android:id="@+id/search_wifi"
        android:onClick="nextAct"
        android:background="@color/backGround_Purple"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="61dp"
        app:backgroundTint="@color/backGround_Purple"
        android:adjustViewBounds="false" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/bulb"
        android:id="@+id/control_btn"
        android:background="@color/backGround_Purple"
        android:onClick="nextAct"
        android:layout_below="@+id/search_wifi"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="96dp"
        app:backgroundTint="@color/backGround_Purple" />


</RelativeLayout>
